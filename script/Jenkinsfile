pipeline{
    agent any 
    tools{
     maven 'M2_HOME' 
    }
    stages{
        stage('sonar-scan'){
            steps{
                sh'mvn verify org.sonarsource.scanner.maven:sonar-maven-plugin:sonar -Dsonar.projectKey=koffimichel_geo-app1'
            }
        }
        stage('maven'){
            steps{
            sh'mvn clean validate compile install test package'
            }
        }
        stage('upload artifact'){
            steps{
                sh 'curl -uadmin:APHKcPC3a5vmZR9FV9hqX6v1qo -T target/bio*.jar "http://ec2-54-152-154-151.compute-1.amazonaws.com:8081/artifactory/geolocation/geo/bio_${BUILD_ID}.jar"'
            }
        }
        
    }
}